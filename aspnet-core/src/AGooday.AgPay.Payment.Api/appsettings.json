{
    "ConnectionStrings": {
        "Default": "server=host.docker.internal;port=3306;uid=root;pwd=mysql*;database=agpayplusdb_dev"
    },
    "AppSettings": {
        "ForceHttpsRedirection": true
    },
    "Cors": {
        "AllowedOrigins": [
            "https://localhost:8819",
            "http://localhost:8819"
        ] // 允许的前端地址
    },
    "AesKey": "4ChT08phkz59hquD795X7w==",
    "SysRSA2": {
        "PublicKey": "",
        "PrivateKey": ""
    },
    "IdWorkerConfig": {
        "IsUseSnowflakeId": true,
        "DataCenterId": 1,
        "MachineId": 1
    },
    "Redis": {
        "Default": {
            "Connection": "agpay-plus-redis:6379,abortConnect=false,defaultDatabase=4",
            "InstanceName": "",
            "DefaultDB": 4 // 1库：运营平台  #2库：代理商系统 #3库：商户系统 #4库：支付网关
        }
    },
    "MQ": {
        "Vender": "RabbitMQ",
        "RabbitMQ": {
            "HostName": "agpay-plus-rabbitmq",
            "UserName": "guest",
            "Password": "guest",
            "Port": "5672"
        }
    },
    "Quartz": {
        "Jobs": [
            {
                "JobType": "PayOrderDivisionRecordReissueJob",
                "CronExpression": "0 0/1 * * * ?"
            },
            {
                "JobType": "PayOrderExpiredJob",
                "CronExpression": "0 0/1 * * * ?"
            },
            {
                "JobType": "PayOrderReissueJob",
                "CronExpression": "0 0/1 * * * ?"
            },
            {
                "JobType": "RefundOrderExpiredJob",
                "CronExpression": "0 0/1 * * * ?"
            },
            {
                "JobType": "RefundOrderReissueJob",
                "CronExpression": "0 0/1 * * * ?"
            },
            {
                "JobType": "TransferOrderReissueJob",
                "CronExpression": "0 0/1 * * * ?"
            }
        ]
    },
    "OSS": {
        "ServiceType": "local",
        "FileRootPath": "/app/agpayplus/upload", //存储根路径 ( 无需以‘/’结尾 )
        "FilePublicPath": "/app/agpayplus/upload/public", //公共读取块  ( 一般配合root-path参数进行设置，需以‘/’ 开头, 无需以‘/’结尾 )
        "FilePrivatePath": "/app/agpayplus/upload/private", //私有化本地访问，不允许url方式公共读取 ( 一般配合root-path参数进行设置，需以‘/’ 开头, 无需以‘/’结尾  )
        "AliyunOss": {
            "Endpoint": "oss-cn-beijing.aliyuncs.com",
            "PublicBucketName": "bucket1",
            "PrivateBucketName": "bucket2",
            "AccessKeyId": "T5w****gI0****qch",
            "AccessKeySecret": "u17oH**********aoApV**********"
        }
    },
    "Notice": {
        "IntervalSeconds": 10, //发送间隔（仅限同一标题），避免短时间内发送大量相同的消息

        //【邮件配置】
        "Mail": {
            "Host": "smtp.qq.com", //SMTP地址
            "Port": 465, //SMTP端口
            "FromName": "xxx@foxmail.com", //发件人（可自定义）
            "FromAddress": "xxx@foxmail.com", //发件地址（需与密码匹配）
            "Password": "******", //发件密码
            "ToAddress": [ "123@qq.com" ] //接收邮件的地址
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    // ✅ 自定义字段（用于你的扩展方法）
    "AgSerilog": {
        "SystemName": "Payment",
        "Version": "1.0.0",
        "BaseLogPath": "/app/agpayplus/logs/payment",
        "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{SystemName}:{Version}][{CRequestId}]-[{RequestId}]:{UserId} [{ThreadId}] {Level:u3} {SourceContext} - {Message:lj}{NewLine}{Exception}",
        "SeqUrl": "http://seq.example.com",
        "SeqApiKey": "",
        "EnableSeq": true
    },
    // ⚠️ 以下为 Serilog 原生配置（必须保留）
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Enrichers.Thread" ],
        "MinimumLevel": "Debug",
        "Enrich": [ "FromLogContext", "WithThreadId" ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss zzz} [{SystemName}:{Version}][{CRequestId}]-[{RequestId}]:{UserId} [{ThreadId}] {Level:u3} {SourceContext} - {Message:lj}{NewLine}{Exception}"
                }
            }
            // ⚠️ 文件输出不再在这里写！由 C# 动态添加
        ]
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://host.docker.internal:5819"
            },
            "Https": {
                "Url": "https://host.docker.internal:9819",
                "Certificate": {
                    "Path": "/https/agpayplusapi.pfx", // 替换为你的证书路径
                    "Password": "123456" // 替换为你的证书密码
                }
            }
        }
    },
    "AllowedHosts": "*"
}
