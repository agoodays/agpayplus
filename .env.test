# ========================================
# AgPay+ 测试环境配置
# ========================================

# Docker Compose 配置
COMPOSE_PROJECT_NAME=agpayplus-test
IMAGE_PREFIX=agpay-test
IMAGE_TAG=test

# 服务器配置
IPORDOMAIN=test.agpayplus.com

# MySQL 配置
MYSQL_SERVER_NAME=172.17.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=YourSecurePassword
MYSQL_DATABASE=agpayplusdb_test

# SSL 证书
CERT_PASSWORD=SecurePassword123
CERT_PATH=~/.aspnet/https
CERT_PATH_IN_CONTAINER=/https/agpayplusapi.pfx

# RabbitMQ
MQ_VENDER=RabbitMQ
MQ_HOSTNAME=rabbitmq
MQ_USERNAME=admin
MQ_PASSWORD=SecureMqPassword
MQ_PORT=5672

# Seq 日志
SEQ_URL=http://seq:80
ENABLE_SEQ=true
SEQ_API_KEY=

# 数据路径
DATA_PATH_HOST=/opt/agpayplus-test
