# ========================================
# AgPay+ 开发环境配置
# ========================================

# Docker Compose 配置
COMPOSE_PROJECT_NAME=agpayplus-dev
IMAGE_PREFIX=agpay-dev
IMAGE_TAG=dev

# 服务器配置
IPORDOMAIN=localhost

# MySQL 配置
MYSQL_SERVER_NAME=host.docker.internal
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=123456
MYSQL_DATABASE=agpayplusdb_dev

# SSL 证书
CERT_PASSWORD=123456
CERT_PATH=~/.aspnet/https
CERT_PATH_IN_CONTAINER=/https/agpayplusapi.pfx

# RabbitMQ
MQ_VENDER=RabbitMQ
MQ_HOSTNAME=rabbitmq
MQ_USERNAME=admin
MQ_PASSWORD=admin
MQ_PORT=5672

# Seq 日志
SEQ_URL=http://seq:80
ENABLE_SEQ=true
SEQ_API_KEY=

# 数据路径
DATA_PATH_HOST=./data/dev
