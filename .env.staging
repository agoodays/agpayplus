# ========================================
# AgPay+ 预发布环境配置
# ========================================

# ========== 环境标识 ==========
ENVIRONMENT=staging
COMPOSE_PROJECT_NAME=agpayplus-staging
IMAGE_PREFIX=agpay-staging
IMAGE_TAG=latest

# ========== 域名/IP 配置 ==========
IPORDOMAIN=staging.yourdomain.com

# ========== MySQL 配置 ==========
MYSQL_SERVER_NAME=host.docker.internal
MYSQL_PORT=3306
MYSQL_DATABASE=agpayplusdb_staging
MYSQL_USER=root
MYSQL_PASSWORD=staging_password

# ========== 数据持久化路径 ==========
DATA_PATH_HOST=/var/agpayplus-staging

# ========== SSL 证书路径 ==========
CERT_PATH=/root/.aspnet/https
CERT_PATH_IN_CONTAINER=/https/agpayplusapi.pfx
CERT_PASSWORD=123456

# ========== MQ 配置 ==========
MQ_VENDER=RabbitMQ
MQ_HOSTNAME=rabbitmq
MQ_USERNAME=admin
MQ_PASSWORD=admin
MQ_PORT=5672

# ========== Seq 日志配置 ==========
SEQ_URL=http://seq:80
ENABLE_SEQ=true
SEQ_API_KEY=

# ========== 构建选项 ==========
# 是否构建 cashier（收银台）：true/false
BUILD_CASHIER=false
